---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

interface Props {
    imagePath: string;
    alt: string;
    width: number;
    height: number;
    widths: Array<number>;
    classes?: Array<string>;
}

const { imagePath, alt, width, height, widths, classes } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
    "/src/images/**/**/*.{jpeg,jpg,png}",
);
if (!images[imagePath])
    throw new Error(
        `"${imagePath}" does not exist in glob: "/src/images/**/**/*.{jpeg,jpg,png}"`,
    );
---

<Picture
    src={images[imagePath]()}
    alt={alt}
    formats={["avif", "webp"]}
    quality={80}
    width={width}
    height={height}
    widths={widths}
    class:list={classes}
/>
