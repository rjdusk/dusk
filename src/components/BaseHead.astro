---
import "../styles/global.css";
import { SEO } from "astro-seo";

const {
    title = "Photographer, Graphic Designer & Web Developer, New Zealand",
    description = "The creative output of Rhys Jones. A photographer, graphic designer and front-end developer based in New Zealand.",
    openGraphBasicTitle = title + " | Dusk",
    openGraphBasicDescription = description,
    openGraphBasicType = "website",
    openGraphImage = Astro.url.origin + "/og.jpg",
    openGraphBasicImage = openGraphImage,
    openGraphImageAlt = title,
    openGraphImageWidth = 1200,
    openGraphImageHeight = 630,
    openGraphBasicUrl = Astro.url.href,
} = Astro.props;
---

<head>
    <SEO
        charset="UTF-8"
        {title}
        titleTemplate="%s | Dusk"
        {description}
        extend={{
            meta: [
                {
                    name: "viewport",
                    content: "width=device-width, initial-scale=1",
                },
                {
                    httpEquiv: "X-UA-Compatible",
                    content: "IE=edge,chrome=1",
                },
                { name: "author", content: "Rhys Jones" },
            ],
            link: [
                { rel: "icon", href: Astro.url.origin + "/favicon.ico" },
                {
                    rel: "icon",
                    href: Astro.url.origin + "/icon.svg",
                    type: "image/svg+xml",
                },
                {
                    rel: "apple-touch-icon",
                    href: Astro.url.origin + "/apple-touch-icon.png",
                },
                {
                    rel: "manifest",
                    href: Astro.url.origin + "/manifest.webmanifest",
                },
            ],
        }}
        openGraph={{
            basic: {
                title: openGraphBasicTitle,
                type: openGraphBasicType,
                image: openGraphBasicImage,
                url: openGraphBasicUrl,
            },
            image: {
                secureUrl: openGraphBasicImage,
                type: "image/jpg",
                width: openGraphImageWidth,
                height: openGraphImageHeight,
                alt: openGraphImageAlt,
            },
            optional: {
                siteName: "Dusk",
                description: openGraphBasicDescription,
            },
        }}
        twitter={{
            card: "summary_large_image",
        }}
    />
    <link
        rel="alternate"
        type="application/rss+xml"
        title="Dusk | The journal of Rhys Jones"
        href={`${Astro.site}rss.xml`}
    />
    <link
        rel="preload"
        href="/fonts/larken-variable.woff2"
        as="font"
        type="font/woff2"
        crossorigin
    />
    <script is:inline src="/scripts/nav.js" type="module"></script>
</head>
