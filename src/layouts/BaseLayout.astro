---
import BaseHead from "@/components/BaseHead.astro";
import Navigation from "@/components/global/Navigation.astro";
import Footer from "@/components/global/Footer.astro";
const { title, description, image } = Astro.props;
---

<html lang="en">
    <BaseHead title={title} description={description} openGraphImage={image} />
    <body
        class="overflow-x-hidden bg-yellow-50 text-base font-serif text-gray-800 font-light">
        <Navigation />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
