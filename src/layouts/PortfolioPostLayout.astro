---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter, title, description, ogimage } = Astro.props;
---

<BaseLayout title={title} description={description} image={ogimage}>
    <main>
        <article class="max-w-7xl mx-auto mb-8 lg:mb-16 px-4 lg:px-8">
            <header class="mb-8">
                <h1 class="mb-6 max-w-headline">{frontmatter.title}</h1>
            </header>
            <div class="flex flex-col md:flex-row gap-8 mb-16">
                <aside
                    class="w-full md:w-3/12 flex flex-row md:flex-col gap-4 justify-between items-end md:items-start md:justify-start text-xs font-extralight">
                    <ul role="list" class="list-reset space-y-4">
                        <li>
                            <p
                                class="mb-0 uppercase text-gray-500 tracking-wide leading-normal">
                                Year
                            </p>
                            <p>{frontmatter.years}</p>
                        </li>
                        {
                            frontmatter.client !== "na" && (
                                <li>
                                    <p class="mb-0 uppercase text-gray-500 tracking-wide leading-normal">
                                        Client
                                    </p>
                                    <p>{frontmatter.client}</p>
                                </li>
                            )
                        }
                        <li>
                            <p
                                class="mb-0 uppercase text-gray-500 tracking-wide leading-normal">
                                Medium
                            </p>
                            <p class="capitalize">{frontmatter.tags}</p>
                        </li>
                    </ul>
                </aside>
                <div
                    class="w-full md:w-9/12 flow"
                    set:html={frontmatter.introduction}
                />
            </div>
            <div class="w-full grid grid-cols-12 gap-4 sm:gap-8">
                <slot />
            </div>
        </article>
    </main>
</BaseLayout>
